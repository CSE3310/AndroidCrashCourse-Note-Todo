<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="phms.main.Activities.MenuMain"
    tools:showIn="@layout/activity_menu_main">

    <Button
    android:background="@drawable/button_3d"
    android:id="@+id/diet"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Diet"
    style = "@style/button_text"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="170dp" />

    <Button
    android:background="@drawable/button_3d"
    android:id="@+id/notes"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Notes"
    style = "@style/button_text"
    android:layout_below="@+id/communication"
    android:layout_centerHorizontal="true" />

    <Button
    android:background="@drawable/button_3d"
    android:id="@+id/reminders"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Reminders"
    style = "@style/button_text"
    android:layout_marginTop="94dp"
    android:layout_below="@+id/vital_signs"
    android:layout_centerHorizontal="true" />

    <Button
    android:background="@drawable/button_3d"
    android:id="@+id/medicine"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Medicine"
    style = "@style/button_text"
    android:layout_below="@+id/diet"
    android:layout_centerHorizontal="true" />

    <Button
    android:background="@drawable/button_3d"
    android:id="@+id/communication"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Communication"
    style = "@style/button_text"
    android:layout_below="@+id/reminders"
    android:layout_centerHorizontal="true" />

